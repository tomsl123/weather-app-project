extends layout

block scripts
    script(src='javascripts/updateCurrentWeatherInformation.js' type="module")
    script(src='javascripts/authentication.js')
    script(src='javascripts/updateUserData.js')
    script(src='javascripts/updateWeatherInformationFromSearch.js' type="module")
    script(src='javascripts/updateForecast.js' type="module")

block content
    .dashboard-container
        img(src='/images/profile-pictures/person1.jpg')#profile-picture
        h1#dashboard-title Your name's dashboard
        button(onclick='deauthenticate()').login-button Logout
    .dashboard-container.flex-column
        button#getCurrent Get current weather
        p#temperature-info
        #weather-image-container
    #forecast-cards-container(hidden)
    .dashboard-container.flex-column
        .bottom-space
            input(placeholder="Enter city")#city-input
            button#search-city Get temperature
        p#search-temperature-info
        #error-message(hidden) This city does not exist!